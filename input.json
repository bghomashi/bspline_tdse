{
    "propagator": "crank_nicolson",
    "time_step": 0.2,
    "math_library": "PETsc",
    "checkpoint": 5000,
    "restart" : false,
    "do_propagate" : false,
    
    "basis": {
        "order": 8,
        "node_sequence": "linear",
        "num_nodes": 500,
        "x_min": 0.0,
        "x_max": 300.0,
        "lmax": 30,
        "mmax": 30,
        "ecs_r0": 0.9
    },
    "lasers": [
        {
            "num_cycles": 10,
            "cycles_delay": 0.0,
            "envelope": "sin2",
            "intensity": 1.0e14,
            "polarization_vector": [
                1.0,
                1.0,
                1.0
            ],
            "poynting_vector": [
                1.0,
                1.0,
                -2.0
            ],
            "wavelength": 200,
            "cep": 0
        }
    ],
    "initial_state": [
        {
            "n": 1,
            "l": 0,
            "m": 0,
            "phase": 0
        }
    ],
    "potentials": [
        {
            "type": "coulomb",
            "Z": 1
        }
    ],
    "observables": {
        "norm": {
            "compute_period": 1,
            "filename" : "data/hydrogen/400nm_10cyc_L30_N1000/z_norm.txt"
        },
        "dipole_acc": {
            "filename" : "data/hydrogen/400nm_10cyc_L30_N1000/z_dip_acc.txt"
        },
        "populations": {
            "filename" : "data/hydrogen/400nm_10cyc_L30_N1000/z_populations.txt"
        },
        "pulse": {
            "filename" : "data/hydrogen/400nm_10cyc_L30_N1000/pulse.txt"
        },
        "potential": {
            "grid_points" : 500,
            "filename" : "data/hydrogen/400nm_10cyc_L30_N1000/potential.txt"
        }
    },
    "eigen_state": {
        "solver": "SLEPC",
        "nmax": 4,
        "tol": 1e-10,
        "filename": "H.h5"
    },
    "log_filename": "log.txt"
}