{
    "propagator": "crank_nicolson",
    "time_step": 0.1,
    "math_library": "PETsc",
    "checkpoint": 5000,
    "restart" : false,
    "do_propagate" : true,
    
    "basis": {
        "order": 8,
        "node_sequence": "linear",
        "num_nodes": 300,
        "x_min": 0.0,
        "x_max": 150.0,
        "lmax": 2,
        "mmax": 0,
        "ecs_r0": 0.9
    },
    "lasers": [
        {
            "num_cycles": 1,
            "cycles_delay": 0.0,
            "envelope": "sin2",
            "intensity": 0.0,
            "wavelength": 200,
            "cep": 0,
            "polarization_vector": [
               	0.0,
                0.0,
                1.0
            ],
            "poynting_vector": [
                1.0,
                0.0,
                0.0
            ]
        }
    ],
    "initial_state": [
        {
            "n": 2,
            "l": 1,
            "m": 1,
            "phase": 0
        }
    ],
    "potentials": [
        {
            "type": "coulomb",
            "Z": 1
        }
    ],
    "observables": {
        "norm": {
            "compute_period": 1,
            "filename" : "norm.txt"
        },
        "dipole_acc": {
            "filename" : "dip_acc.txt"
        },
        "populations": {
            "filename" : "populations.txt"
        },
        "pulse": {
            "filename" : "pulse.txt"
        },
        "potential": {
            "grid_points" : 500,
            "filename" : "potential.txt"
        },
        "basis": {
            "grid_points" : 500,
            "filename" : "basis.txt"
        },
        "debug_wavefunction": {
            "compute_period": 1000,
            "grid_points" : 500,
            "filename" : "wavefunction.txt"
        }
    },
    "eigen_state": {
        "solver": "SLEPC",
        "nmax": 4,
        "tol": 1e-10,
        "filename": "H.h5"
    },
    "log_filename": "log.txt"
}